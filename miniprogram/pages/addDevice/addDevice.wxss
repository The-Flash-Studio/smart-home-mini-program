.add_device_con{
    width: 100vw;
    background-color: transparent;
    box-sizing: border-box;
    padding: 50px 30rpx 0 30rpx;
    position: relative;
    height: 100vh;
}
.spinner_container{
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%);
}
.spinner_tips{
    color: #4caf50;
    margin-bottom: 32rpx;
    font-size: 36rpx;
}
.spinner_son_container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.weui-input{
    border: 1px solid #4caf50;
    width: 70%;
    height: 64rpx;
    margin: 24rpx 0 48rpx 0;
    border-radius: 12rpx;
}


.avatar_con{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar_img{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}
.nick_name{
    margin: 24rpx 0rpx;
}
.item_con{
    display: flex;
    justify-content: space-between;
    padding: 0 18rpx;
    height: 86rpx;
    border-bottom: 1rpx solid #ddd;
    align-items: center;
}

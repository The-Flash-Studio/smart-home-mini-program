.grant_con{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.grant_btn{
    color: #fff;
    background-color: #4caf50;
    padding: 0 100rpx;
}

.grant_con_wrap{
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(50%);
}

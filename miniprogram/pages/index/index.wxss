/*** Header ***/
.index_header_container{
  width: 750rpx;
  height: 328rpx;
  background-color: transparent;
  box-sizing: border-box;
  padding: 50px 30rpx 0 30rpx;
  position: relative;
}
.bg_img {
  width: 750rpx;
  height: 328rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.header_title_box {
  position: relative;
  z-index: 9;
}
.title_box {
  background-color: #ffffffcd;
  padding:10rpx 20rpx;
  width: 150rpx;
  border-radius: 30rpx;
}
.title_text {
  font-weight: 700;
  font-size: 30rpx;
}
.icon_box {
  background-color: #ffffffcd;
  padding:10rpx;
  border-radius: 30rpx;
  margin-left: 15rpx;
  margin-right: 25rpx;
}
.management_add {
  margin-left: 20rpx;
  border-radius: 30rpx;
  border: #999 solid 2rpx;
  padding: 0rpx 15rpx 0 10rpx;
  height: 40rpx;
}
.management_add_text {
  color: #999;
  font-size: 25rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: 700;
  margin-left: 5rpx;
}

/* extra_line */
.extra_line {
  width: 750rpx;
  height: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: rgb(231, 237, 252);
  margin-top: -20rpx;
  z-index: 99;
  position: relative;
}


/*** tab_style ***/
.tab_box{
  width: 750rpx;
  height: 100vh;
}
.tabs_container{
  flex: 1;
  /* height: 80vh; */
  background-color: rgb(231, 237, 252);
}
.van-tabs__wrap {
  height: 120rpx!important;
  /* padding-top: 10rpx!important; */
  background-color: rgb(231, 237, 252)!important;
}
.van-tabs__scroll{
  background-color: rgb(231, 237, 252)!important;
}
.tab-class {
  color:#5785e7a4!important;
  font-size: 15px!important;
}
.van-tabs__line{
  background-color:#FF8691!important;
}

.tab-active-class {
  color:#5785e7!important;
  font-size: 18px!important;
}

/*** tab_content ***/
.tab_content_container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 20rpx 20px 20rpx;
}
.equp_card_box {
  width: 335rpx;
  height: 200rpx;
  margin: 20rpx 10rpx;
  border-radius: 10px;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #F2F5FC;
  position: relative;
}
.card_title {
  font-size: 30rpx;
  color: rgb(104, 102, 102);
  font-weight: 800;
  margin-top: 20rpx;
}
.card_subtitle {
  font-size: 20rpx;
  color: rgb(122, 121, 121);
}
.addDevice_box {
  width: 730rpx;
  height: 60rpx;
  margin: 30rpx 10rpx 0rpx 10rpx;
}
.addDevice_btn {
  width: 690rpx;
  /* padding: 0 15rpx; */
  border-radius: 15rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #ffa0a8;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

/* management */
.management_container{
  padding:50rpx 30rpx;
}
.management_title_box{
  padding:20rpx 0rpx 50rpx 0rpx;
}
.management_title_text{
  font-size: 48rpx;
  color:#5785e7;
  margin-left: 10rpx;
  font-weight: 700;
}
.management_button_box {
  height: 100rpx;
  width: 690rpx;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.management_button {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 10rpx;
  padding:0 20rpx;
  margin-left: 20rpx;
}

/* overlay */
.setting_container{
  padding:50rpx 30rpx;
}

/* loading */
.loading_container {
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999 !important;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFF;
}
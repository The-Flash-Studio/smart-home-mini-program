.userinfo_con{
    width: 100vw;
    background-color: transparent;
    box-sizing: border-box;
    padding: 50px 30rpx 0 30rpx;
    position: relative;
}
.avatar_con{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar_img{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}
.nick_name{
    margin: 24rpx 0rpx;
}
.item_con{
    display: flex;
    justify-content: space-between;
    padding: 0 18rpx;
    height: 86rpx;
    border-bottom: 1rpx solid #ddd;
    align-items: center;
}

<view class="page-box">

  <van-nav-bar
    title="{{deviceInfo.nickName}}"
    left-text="返回"
    right-text=""
    left-arrow
    bind:click-left="onClickLeft"
    bind:click-right="onClickRight"
    custom-style="nav-bar"
  >
    <van-icon
      name="delete"
      size="20"
      slot="right"
    />
  </van-nav-bar>

  <van-steps
    steps="{{steps}}"
    active="{{stepsActive}}"
    active-color="#38f"
  />
  <!-- 基础信息 deviceInfo.powerSource -->
  <van-cell title=" 电源">
    <van-icon
      slot="icon"
      name="cluster-o"
      color="blue"
      size="18px"
    />
    <block wx:if="{{deviceInfo.powerSource=='true'}}">
      <van-tag
        round
        plain
        type="success"
        size="medium"
      >
        <van-icon name="success" color="green" />
        正常
      </van-tag>

    </block>
    <block wx:else>
      <van-tag
        round
        plain
        type="danger"
        size="medium"
      >
        <van-icon name="fail" color="red" />
        异常
      </van-tag>

    </block>
  </van-cell>

  <view class="checkbox-container">
    <!-- <van-checkbox
      value="{{ currentCheckValue }}"

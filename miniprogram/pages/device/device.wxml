      text="水量"
      color="{{circleGradientColor}}"
      layer-color="#eeeeee"
    /> -->
  </view>
  <!-- van-circle fill="antiquewhite" 该属性会挡住文字-->

  <view class="confirm-button-container">

    <van-button
      type="primary"
      size="large"
      round
      loading="{{isRequesting}}"
      bind:click="onConfirmSet"
    >
      保存设置
    </van-button>
  </view>

</view>

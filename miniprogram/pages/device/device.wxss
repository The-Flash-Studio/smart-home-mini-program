/* tab_style */
.page-box {
  width: 100vw;
  height: 100vh;
  display: flex;
  padding-top: 40px;
  flex-direction: column;
}
.nav-bar{
  margin-top: 50px;
}
.step-class{
  margin: 10px;
}
.checkbox-container{
  margin-top: 15px;
  display: flex;
  justify-content: center;
}
.slider{
  margin:auto;
  width: 80vw;
  align-content: center;
  margin-top: 30px;
}
.slider-button{
  width: 24px;
  height: 15px;
  border-radius: 8px;
  font-size: 8px;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: cornflowerblue;
}

.circle-container{
  margin-top: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-button-container{
  margin-left: 50px;
  margin-right: 50px;
  width: 75vw;
  position:fixed;
  align-items: center;
  bottom: 80px;
}
/* tab_style */
.page-padding {
  padding: 30px 0rpx 0 0rpx;
}
.page-nav-bar{
  margin-top: 50px;
}
.page-title{
  font-size: 40rpx !important;
  font-weight: bolder;
}
.step-class{
  margin: 10px;
}
.device-checkbox{
  margin-top: 15px;
  display: flex;
  justify-content: center;
}
.slider{
  margin:auto;
  width: 80vw;
  align-content: center;
  margin-top: 30px;
}
.slider-button{
  width: 24px;
  height: 15px;
  border-radius: 8px;
  font-size: 8px;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: cornflowerblue;
}

.circle-container{
  margin-top: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-button-container{
	margin-bottom:40px;
	width:80vw;
	position:fixed;
	bottom:0px;
	display:flex;
  align-self: center;
	justify-content:center;
}
.confirm-button{
	width:80vw !important;
  color: "#7232dd";
}
.index_header_container{
  width: 100vw;
  background-color: transparent;
  box-sizing: border-box;
  padding: 50px 30rpx 0 30rpx;
  position: relative;
}
.header_title_box {
  position: relative;
  z-index: 9;
}
.title_box {
  background-color: palegoldenrod;
  padding:10rpx 20rpx;
  border-radius: 30rpx;
}
.title_text {
  font-weight: 700;
  font-size: 30rpx;
}
.icon_box {
  background-color: #ffffffcd;
  padding:10rpx;
  border-radius: 30rpx;
  margin-left: 15rpx;
}
